---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Projects';
const description = 'A small collection of experiments and open-source work.';
const permalink = `${Astro.site.href}projects`;

const projects = [
  {
    name: 'vector',
    href: 'https://github.com/brunoabpinto/vector',
    repo: 'github.com/brunoabpinto/vector'
  },
  {
    name: 'IMGML',
    href: 'https://github.com/brunoabpinto/IMGML',
    repo: 'github.com/brunoabpinto/IMGML'
  },
  {
    name: 'phpvm',
    href: 'https://github.com/brunoabpinto/phpvm',
    repo: 'github.com/brunoabpinto/phpvm'
  },
  {
    name: 'csrf-refresh',
    href: 'https://github.com/brunoabpinto/csrf-refresh',
    repo: 'github.com/brunoabpinto/csrf-refresh'
  }
];
---

<BaseLayout title={title} description={description} permalink={permalink} current="projects">
  <section class="projects-shell">
    <header class="projects-hero">
      <p class="eyebrow">Open Source</p>
      <h1>Projects</h1>
      <p class="intro">
        A curated set of experiments, libraries, and tiny tools. Each card links
        directly to the repo.
      </p>
    </header>

    <div class="projects-grid">
      {projects.map((project) => (
        <a class="project-card" href={project.href}>
          <div class="card-top">
            <span class="pill">GitHub</span>
          </div>
          <h2>{project.name}</h2>
          <p class="repo">{project.repo}</p>
          <div class="card-footer">
            <span>View repository</span>
          </div>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .projects-shell {
    position: relative;
    padding: 2.5rem 0 4rem;
  }

  .projects-hero {
    max-width: 700px;
    margin-bottom: 2.5rem;
  }

  .eyebrow {
    font-family: var(--font-family-sans);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.8rem;
    color: var(--text-secondary);
    margin: 0 0 1rem 0;
  }

  h1 {
    font-family: var(--font-family-serif);
    font-size: clamp(2.6rem, 5vw, 4.5rem);
    margin-bottom: 0.5rem;
  }

  .intro {
    font-size: 1.2rem;
    margin: 0;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
    gap: 1.8rem;
  }

  .project-card {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1.6rem;
    border-radius: 18px;
    border: 1px solid rgba(54, 57, 59, 0.12);
    background: linear-gradient(145deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.6));
    box-shadow: 0 12px 30px rgba(18, 18, 18, 0.08);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .project-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 40px rgba(18, 18, 18, 0.15);
    text-decoration: none;
  }

  .card-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .pill {
    font-family: var(--font-family-sans);
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    padding: 0.3rem 0.7rem;
    border-radius: 999px;
    background: rgba(229, 181, 103, 0.2);
    color: #7a5420;
  }

  .project-card h2 {
    margin: 0.2rem 0 0.2rem;
    font-size: 1.6rem;
  }

  .repo {
    font-family: var(--font-family-sans);
    font-size: 0.95rem;
    color: var(--text-secondary);
    margin: 0;
  }

  .card-footer {
    margin-top: auto;
    font-family: var(--font-family-sans);
    font-size: 0.95rem;
    color: var(--text-secondary);
  }

  :global(.theme-dark) .project-card {
    border-color: rgba(255, 255, 255, 0.12);
    background: linear-gradient(145deg, rgba(35, 36, 38, 0.95), rgba(32, 33, 34, 0.7));
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.45);
  }

  :global(.theme-dark) .pill {
    color: #f6d9a7;
    background: rgba(229, 181, 103, 0.18);
  }

  @media screen and (max-width: 720px) {
    .projects-shell {
      padding-top: 1.5rem;
    }
  }
</style>
