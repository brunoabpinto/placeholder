---
import Logo from './Logo.astro'
import Nav from './Nav.astro'

const { current = '' } = Astro.props;
---

<style>
  header {
    display: flex;
    margin: 0 auto;
    max-width: 1400px;
    padding: 2em;
    width: 100%;
  }

  @media screen and (max-width: 720px) {
    header {
      align-items: center;
      flex-direction: column;
      gap: 1.25em;
      padding: 1.25em 1.5em;
    }
  }
</style>

<header>
  <Logo />
  <Nav current={current} />
</header>
